<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="toolbarStyle">@style/CustomToolBarStyle</item>
        <item name="actionOverflowButtonStyle">@style/SilverDots</item>
    </style>

    <style name="CustomToolBarStyle" parent="@style/Widget.AppCompat.Toolbar">
        <item name="titleTextColor">@color/silver</item>
    </style>

    <style name="SilverDots" parent="@style/Widget.AppCompat.ActionButton.Overflow" >
        <item name="android:tint">@color/silver</item>
    </style>

</resources>
